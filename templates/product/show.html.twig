{% extends 'base.html.twig' %}

{% block body %}
    <main class="container">
        <h1>{{ product.name }}</h1>
        <h3>Prix : {{ product.price }}€</h3>
        <h4>
            <span class="badge badge-pill badge-primary">
                {{ product.category.name }}
            </span>
        </h4>
        <p class="text-muted">Publié le
            {{ product.createdAt | date('d/m/Y à H:i') }},
            {{ product.nbViews }} vues
        </p>
        <p>{{ product.description }}</p>

        <p class="text-muted">Dernière modification le {{ product.updatedAt | date('d/m/Y H:i', "Europe/Paris") }}</p>
    </main>
{% endblock %}

